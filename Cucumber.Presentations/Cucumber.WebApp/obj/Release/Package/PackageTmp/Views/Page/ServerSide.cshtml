@model Cucumber.WebApp.Models.ServerSideViewModel
@{
    ViewBag.Title = "ServerSide";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header class="masthead" style="background-image: url('/Styles/images/milky_way_stars.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="top-panel">
                </div>
            </div>
        </div>
    </div>
</header>
<section class="container">
    <div class="row">
        <div class="col-md-12">
            @using (Ajax.BeginForm("ConvertNumberAsync", "Component", new AjaxOptions() {
                HttpMethod = "Post",
                OnFailure = "ShowFailure",
                UpdateTargetId = "message-area",
            }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="panel">
                    <div class="panel-heading custom-header-panel">
                        <h3 class="panel-title">@Model.HeadingText</h3>                       
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="name">@Html.LabelFor(model => model.FullName)  <span class="requerido"> *</span></label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.FullName, htmlAttributes: new { Class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="name">@Html.LabelFor(model => model.Number) <span class="requerido"> *</span></label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.Number, htmlAttributes: new { Class = "form-control" })
                            </div>
                        </div>
                        <div id="message-area"></div>
                        <div class="form-group text-center">
                            <input type="submit" id="submit_btn" class="btn btn-orange-md roboto" value="@Model.ButtonText">
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<hr>
@section Scripts{
<script type="text/javascript">
    
    function ShowFailure() {
        
        $('#message-area').html("<div class='alert alert-danger'><strong>Error!</strong>Some error occured during submission </div>");
    }
</script>}

