@model Cucumber.WebApp.Models.SettingsViewModel
@{
    ViewBag.Title = "Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="masthead" style="background-image: url('/Styles/images/milky_way_stars.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="top-panel">
                </div>
            </div>
        </div>
    </div>
</header>
<section class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <div class="panel-heading custom-header-panel">
                    <h3 class="panel-title">@Model.HeadingText</h3>
                </div>
                <div class="panel-body">
                    <div class="form-group">

                        <div class="col-sm-8">
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="country"
                                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @Model.Placeholder
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    @foreach (var item in Model.Cultures)
                                    {
                                        <a class="dropdown-item" href="#">@item</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<hr>

