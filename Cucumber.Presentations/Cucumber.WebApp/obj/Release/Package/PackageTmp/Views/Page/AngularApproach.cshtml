
@{
    ViewBag.Title = "AngularApproach";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="masthead" style="background-image: url('/Styles/images/milky_way_stars.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="top-panel">
                </div>
            </div>
        </div>
    </div>
</header>
<section class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <div class="panel-heading custom-header-panel">
                    <h3 class="panel-title">Please Enter Name and Number</h3>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="name">Full Name <span class="requerido"> *</span></label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" placeholder="John Smith" name="name" id="name" value="" required="" maxlength="70">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="name">Fill-in a Number <span class="requerido"> *</span></label>
                        <div class="col-sm-8">
                            <input type="number" class="form-control" placeholder="123.45" name="number" id="number" value="" required="">
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" id="submit_btn" class="btn btn-orange-md roboto">Convert to Words</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<hr>


