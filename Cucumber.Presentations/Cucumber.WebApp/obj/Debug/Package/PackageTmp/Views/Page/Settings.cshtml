@model Cucumber.WebApp.Models.SettingsViewModel
@{
    ViewBag.Title = "Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="masthead" style="background-image: url('/Styles/images/milky_way_stars.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="top-panel">
                </div>
            </div>
        </div>
    </div>
</header>
<section class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <div class="panel-heading custom-header-panel">
                    <h3 class="panel-title">@Model.HeadingText</h3>
                </div>
                <div class="panel-body">
                    <div class="dropdown">
                        <div class="form-group row">
                            <label class="col-sm-4 control-label" for="name">@Model.Placeholder  <span class="requerido"> *</span></label>
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="countryselect" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @Model.Placeholder
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                @foreach (var item in Model.Cultures)
                                {
                                    <a class="dropdown-item" href="#">@item</a>
                                }
                            </div>
                        </div>
                        <div class="form-group  text-center">
                            <label class="col-sm-4 control-label requerido alert alert-info" id="CurrencyDetails"></label>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-4 col-sm-6 control-label" for="name">@Html.DisplayNameFor(model => model.MainCurreny) </label>
                            <div class="col-md-4 col-sm-4">
                                @Html.TextBoxFor(model => model.MainCurreny, htmlAttributes: new { Class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-4  col-sm-6 control-label" for="name">@Html.DisplayNameFor(model => model.FractionalCurrency) </label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.FractionalCurrency, htmlAttributes: new { Class = "form-control" })
                            </div>
                        </div>
                        <div id="message-area"></div>
                        <div class="form-group text-center">
                            <input type="button" id="submit_btn" class="btn btn-orange-md roboto" value="@Model.ButtonText">
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
<hr>
@section Scripts{
    <script type="text/javascript">
        Settings.init();       
    </script>
}
